    <section id="auth">
        <button href="/login" id="mainSigninBtn" class="authBtn signinBtn">Sign <span>In</span></button>
        <form action="/register" method="POST" id="form" class="form">
            <div><input type="text" placeholder="Username" class="authField" name="username" required></div>
            <div><input type="password" placeholder="Password" name="password" class="authField" required></div>
            <div><input type="password" placeholder="Confirm Password" name="confirmpassword" id="confirmpassword" class="authField"></div>
            <button class="authBtn filled">Sign Up</button>
        </form>

        <p class="altOption" id="option-signup">Not a member? <a id="altOptionSignup" class="altOptionBtn">Join Now</a></p>
        <p class="altOption" id="option-signin">Already a member? <a id="altOptionlogin" class="altOptionBtn signinBtn">Sign In</a></p>
    </section>
    

